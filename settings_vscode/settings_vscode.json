{
    "autoDocstring.docstringFormat": "numpy",
    "flake8.args": [
        "--max-line-length=120"
    ],
    "black-formatter.args": [
        "--line-length=120"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    }
}